@model List<Category>
@{
    ViewData["Title"] = "Categories";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

@{
    int count = 0;
}

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Category Name</th>
        <th>Actions</th>
    </tr>

    @foreach(var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.CategoryName</td>
            <td>
                <a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-outline-danger">Delete</a>
                <a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-outline-info">Update</a>
            </td>
        </tr>
    }
</table>

<a href="/Category/CreateCategory/" class="btn btn-outline-primary">Create New Category</a>
