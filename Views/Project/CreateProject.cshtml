@model Project

@{
    ViewData["Title"] = "Create Project";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<form method="post">

    <div class="form-group">
        <label>Project Image Url</label>
        <input type="text" class="form-control" asp-for="ImageUrl" />
        <span class="text-danger" asp-validation-for="ImageUrl"></span>


    </div>

    <div class="form-group">
        <label>Project Name</label>
        <input type="text" class="form-control" asp-for="ProjectName"/>
        <span class="text-danger" asp-validation-for="ProjectName"></span>

    </div>

    <div class="form-group">
        <label>Project Description</label>
        <textarea type="text" class="form-control" asp-for="Description" rows="3"></textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    <div class="form-group">
        <label>Github Url</label>
        <input type="url" class="form-control" asp-for="GithubUrl" />
        <span class="text-danger" asp-validation-for="GithubUrl"></span>

    </div>

    <div class="form-group">
        <label>Category</label>
        <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.categories">
            <option disabled selected>Select Category</option>
        </select>
        <span class="text-danger" asp-validation-for="CategoryId"></span>

    </div>

    <button class="btn btn-outline-primary">Save</button>

</form>